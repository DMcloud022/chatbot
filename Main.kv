MDScreen:
    name: "main"
    bot_name: bot_name
    MDFloatLayout:
        FitImage:
            source: "main_bg.jpg"
        Image:
            source: "Biblioteca.png"
            size_hint: .5, .4
            pos_hint: {"center_x": .5, "center_y": .82}
        MDLabel:
            text: "BIBLIOTECA"
            font_name: "Poppins-SemiBold.ttf"
            font_size: "35sp"
            pos_hint: {"center_x": .5,  "center_y": .60}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: "C H A T B O T"
            size_hint_x: .9
            font_name: "Poppins"
            font_size: "18sp"
            pos_hint: {"center_x": .5,  "center_y": .52}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: "Google can bring you back 100,000 answers.\nA librarian can bring you back the right one.\n\n                     ~  Neil Gaiman"
            font_name: "Poppins"
            font_size: "12sp"
            pos_hint: {"center_x": .5,  "center_y": .38}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0,0,0
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .22}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
            TextInput:
                id: bot_name
                hint_text: "What's your name?"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size: "15sp"
                height: self.minimum_height
                cursor_color: 0,0,0
                cursor_width: "2sp"
                foreground_color: 0,0,0
                background_color: 0,0,0,0
                padding: 15
                font_name: "Poppins"
                halign: "center"
        MDFloatLayout:
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            canvas:
                Color:
                    rgb: (0,0,139)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
        Button:
            text: "  START  "
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            background_color: 0,0,0,0
            on_release:
                app.bot_name()
        MDLabel:
            text: ""
            halign: "center"
            pos_hint: { "center_y": .1}
            font_name: "Poppins-SemiBold.ttf"
            font_size: "18sp"
            color: 1,1,1,1
